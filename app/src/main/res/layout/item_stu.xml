<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivStuCover"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="8dp" />

    <TextView
        android:id="@+id/tvStuName"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvStuId"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="8dp"
        android:layout_toRightOf="@+id/ivStuCover"
        android:text="Name"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/tvStuId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/ivStuCover"
        android:text="Id"
        android:textSize="12dp" />

    <Button
        android:id="@+id/stu_delete"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="4dp"
        android:padding="0dp"
        android:layout_toRightOf="@+id/tvStuName"
        android:focusable="false"
        android:gravity="center"
        android:text="Delete"
        android:textSize="6dp"></Button>
</RelativeLayout>