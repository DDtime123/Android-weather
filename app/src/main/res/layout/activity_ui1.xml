<GridLayout
    android:id="@+id/activity_ui1"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:orientation="horizontal"
    android:rowCount="6"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:layout_columnSpan="4"
            android:layout_gravity="fill_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#dddddd"
            android:text="0"
            android:textSize="50sp"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/num9"
            android:text="9"
            android:background="@drawable/shape_round"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/num8"
            android:text="8"
            android:background="@drawable/shape_round"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/num7"
            android:text="7"
            android:background="@drawable/shape_round"
            android:layout_marginTop="3dp"
android:layout_marginBottom="3dp"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/divide"
            android:text="/"
            android:background="@drawable/shape_round"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_rowWeight="1"/>


        <Button
            android:id="@+id/num6"
            android:text="6"
            android:background="@drawable/shape_round"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/num5"
            android:text="5"
            android:background="@drawable/shape_round"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/num4"
            android:text="4"
            android:background="@drawable/shape_round"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/mutiply"
            android:text="*"
            android:background="@drawable/shape_round"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_rowWeight="1"/>


        <Button
            android:id="@+id/num3"
            android:text="3"
            android:background="@drawable/shape_round"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp" android:layout_marginTop="3dp"
android:layout_marginBottom="3dp"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/num2"
            android:text="2"
            android:background="@drawable/shape_round"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp" android:layout_marginTop="3dp"
android:layout_marginBottom="3dp"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/num1"
            android:text="1"
            android:background="@drawable/shape_round"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp" android:layout_marginTop="3dp"
android:layout_marginBottom="3dp"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/munies"
            android:text="-"
            android:background="@drawable/shape_round"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp" android:layout_marginTop="3dp"
android:layout_marginBottom="3dp"
            android:layout_rowWeight="1"/>


        <Button
            android:id="@+id/num0"
            android:text="0"
            android:background="@drawable/shape_round"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp" android:layout_marginTop="3dp"
android:layout_marginBottom="3dp"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/dot"
            android:text="."
            android:background="@drawable/shape_round"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp" android:layout_marginTop="3dp"
android:layout_marginBottom="3dp"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/plus"
            android:text="+"
            android:background="@drawable/shape_round"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/answer"
            android:text="="
            android:background="@drawable/shape_round"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp" android:layout_marginTop="3dp"
android:layout_marginBottom="3dp"

            android:layout_rowWeight="1"/>


        <Button
            android:layout_columnSpan="4"
            android:id="@+id/clear"
            android:text="clear"
            android:background="@drawable/shape_round"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp" android:layout_marginTop="3dp"
android:layout_marginBottom="3dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill_horizontal"/>

    </GridLayout>